<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_vertical_rv_item_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/home_main_rv_vertical_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Fitness and run clubs" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_nested_grid_rv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/home_main_rv_vertical_title"
            app:layout_constraintTop_toBottomOf="@id/home_main_rv_vertical_title"
            app:spanCount="2"
            tools:itemCount="4"
            tools:listitem="@layout/home_nested_grid_rv_item" />

<!--        <com.google.android.material.button.MaterialButton-->
<!--            android:id="@+id/home_main_rv_vertical_btn"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="60dp"-->
<!--            android:layout_marginHorizontal="22dp"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:layout_marginBottom="20dp"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toBottomOf="@id/home_nested_grid_rv"-->
<!--            tools:text="See all Fitness and run clubs" />-->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/home_main_rv_vertical_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="22dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_outlined_button"
            android:paddingVertical="15dp"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="#f69517"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_nested_grid_rv"
            tools:text="See all Fitness and run clubs"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>